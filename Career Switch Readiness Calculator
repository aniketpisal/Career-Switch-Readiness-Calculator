  <button onclick="calculateReadiness()">Check My Readiness</button>

  <div id="result"></div>

  <script>
    function toggleManualEducation() {
      const edu = document.getElementById("education").value;
      const manualInput = document.getElementById("manualEducation");
      manualInput.style.display = (edu === "manual") ? "block" : "none";
    }

    function calculateReadiness() {
      const domain = document.getElementById("domain").value;
      let education = document.getElementById("education").value;
      const manualEdu = document.getElementById("manualEducation").value.trim().toLowerCase();
      const age = document.getElementById("age").value;
      const time = parseInt(document.getElementById("time").value);
      const coding = document.getElementById("coding").value;
      const goal = document.getElementById("goal").value;
      const result = document.getElementById("result");

      if (!domain || !education || !age || !time || !coding || !goal || (education === "manual" && manualEdu === "")) {
        result.innerHTML = "‚ùå Please fill all fields.";
        result.style.background = "#ffe0e0";
        result.style.color = "#b20000";
        result.style.display = "block";
        return;
      }

      if (education === "manual") {
        education = manualEdu;
      }

      let score = 50;

      // Domain
      if (domain === "semiit") score += 10;
      if (domain === "technical") score += 20;

      // Education scoring
      if (education === "pg" || education.includes("mca") || education.includes("msc it")) score += 10;
      else if (education === "be" || education.includes("be") || education.includes("b.tech")) score += 10;
      else if (education === "bca" || education.includes("bca") || education.includes("bsc it")) score += 5;
      else if (education.includes("bsc") || education.includes("bcom") || education.includes("ba")) score += 2;

      // Age
      if (age === "31-35") score -= 5;
      if (age === "35plus") score -= 10;

      // Time
      if (time === 2) score += 5;
      if (time === 3) score += 10;

      // Coding interest
      if (coding === "maybe") score -= 10;
      if (coding === "no") score -= 25;

      score = Math.max(0, Math.min(100, score));

      let message = `<strong>üìä Your Career Switch Readiness Score: ${score}/100</strong><br><br>`;

      if (score >= 80) {
        message += `‚úÖ You‚Äôre highly ready to switch into IT!<br>Start learning <a href="/fullstack-java-course">Full Stack Java</a> or <a href="/python-course">Python Development</a>.`;
      } else if (score >= 60) {
        message += `üü° You're on the right path.<br>Start with <a href="/java-course">Java Basics</a> and mini-projects.`;
      } else {
        message += `üî¥ Just getting started.<br>Begin with <a href="/coding-foundation">Foundations of Coding</a> to build your basics.`;
      }

      message += `
        <div class="company-list">
          <h3>üë®‚Äçüíª Companies Hiring Career Switchers</h3>
          <ul>
            <li>‚úÖ TCS ‚Äì via Smart Hiring</li>
            <li>‚úÖ Infosys ‚Äì Springboard + off-campus</li>
            <li>‚úÖ Wipro ‚Äì WILP, Testing, QA</li>
            <li>‚úÖ Capgemini ‚Äì Java, Support, Testing</li>
            <li>‚úÖ Tech Mahindra ‚Äì Support to IT roles</li>
            <li>‚úÖ Accenture ‚Äì Freshers + Switchers</li>
            <li>‚úÖ Persistent, Cognizant, LTI (Pune-based)</li>
          </ul>
          <p>üìç Openings in Pune, Mumbai, Hyderabad & Remote.</p>
        </div>

        <div class="cta-box">
          <h3>üöÄ Why Choose Our IT Career Switch Courses?</h3>
          <ul>
            <li>‚úÖ Zero Coding Background Needed</li>
            <li>‚úÖ Project-Based Learning + Resume Building</li>
            <li>‚úÖ Pune/Mumbai Job Support + Mentorship</li>
            <li>‚úÖ Learn in English + Hindi/Marathi</li>
          </ul>
          <p><strong>üéØ Ready to take the leap? Start your journey now!</strong><br>
          üëâ <a href="/contact">Book Free Counseling</a> or <a href="/enroll">Enroll in Our Course</a></p>
        </div>
      `;

      result.innerHTML = message;
      result.style.display = "block";
      result.style.background = "#e9f9e8";
      result.style.color = "#174f1c";
    }
  </script>

